(define (pairlist n)
  (accumulate append null
   (map (lambda (i)
          (map (lambda (j)
                 (list i j))
               (ennumerate-interval 1 (dec i))))
        (ennumerate-interval 1 n))))
(define (flatmap proc seq)
  (accumulate append null (map proc seq)))

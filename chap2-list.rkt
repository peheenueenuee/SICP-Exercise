(define (deep-reverse xs)
  (define (iter items result)
    (cond ((null? items) result)
          ((pair? (car items))
                  (iter (cdr items)
                        (cons (iter (car items) null)
                              result)))
          (else (iter (cdr items) (cons (car items) result)))))
  (iter xs null))

